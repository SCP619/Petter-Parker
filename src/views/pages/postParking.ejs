<%- include('../partials/metadata') %>
    <%- include('../partials/navbar-merchant') %>
        <main class="container text-center h-100">
            <div class="row">
                <div class="col">

                </div>
                <div class="col d-flex align-items-center vh-100">
                    <form action="/postparking" method="post" class="card">
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="yourName" class="form-label"> Parking Spot Name</label>
                                <input type="text" name="name" class="form-control" id="inputName">
                            </div>
                            <div class="mb-3">
                                <label for="Address" class="form-label">Address</label>
                                <input type="text" name="address" class="form-control" id="InputAddress"
                                    aria-describedby="emailHelp">

                            </div>
                            <div class="mb-3">
                                <select name="location" class="form-select" aria-label="Default select example">
                                    <option selected>Choose Your Location</option>
                                    <option value="Dhaka">Dhaka</option>
                                    <option value="Sylhet">Sylhet</option>
                                    <option value="Chittagong">Chittagong</option>
                                </select>
                            </div>

                            <div class="mb-3">

                                <label for="formFile" class="form-label">Parking Spot Image</label>
                                <input class="form-control form-control-sm" type="text" name="img"
                                    placeholder="Give a Link to the image" aria-label=".form-control-sm example">
                            </div>

                            <div class="mb-3">
                                <label for="InputPrice" class="form-label"> Set Price</label>
                                <input type="number" name="price" class="form-control" id="InputPrice">
                            </div>

                            <button type='submit' class="btn btn-primary btn-success">Post Parking Spot</button>
                        </div>
                    </form>
                </div>
                <div class="col">

                </div>
            </div>
        </main>
        <%- include('../partials/close') %>