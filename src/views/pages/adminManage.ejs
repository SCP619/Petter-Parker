<%- include('../partials/metadata') %>
    <%- include('../partials/navbar-admin') %>

        <div>
            <h1></h1>
            <h1></h1>
        </div>
        <h1 class="display-3 text-center">Waiting For Approval </h1>
        <main class="container text-center h-100">

            <div class="row">
                <!-- <div class="col">

            </div> -->
                <div class="col d-flex align-items-center ">
                    <table class="table table-success table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Parking Spot ID</th>
                                <th scope="col">Merchant Name</th>
                                <th scope="col">Parking Spot Name</th>
                                <th scope="col">Address</th>
                                <th scope="col">Location</th>
                                <th scope="col">Date</th>
                                <th scope="col">Price</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% spacesCreated.forEach(({id, name, address, location, price, rented_date, created_by })=>
                                { %>
                                <tr id="<%= id %>">
                                    <th scope="row">
                                        <%= id %>
                                    </th>
                                    <td>
                                        <%= created_by %>
                                    </td>
                                    <td>
                                        <%= name %>
                                    </td>
                                    <td>
                                        <%= address %>
                                    </td>
                                    <td>
                                        <%= location %>
                                    </td>
                                    <td>
                                        <%= dateformat(rented_date, "ddd, d mmm" ) %>
                                    </td>
                                    <td>
                                        <%= price %>
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-primary btn-success">Approve</button>
                                        <button type="submit"
                                            class="btn btn-hover btn-hover btn-danger ">Decline</button>
                                    </td>

                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <!-- <div class="col">

            </div> -->
            </div>
        </main>
        <%- include('../partials/close') %>