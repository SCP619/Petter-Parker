<%- include('../partials/metadata') %>
    <% const {id, name, address, location, price, img, created_by, rented_by, rented_date,rented_time,
        payment_method}=space %>
        <header class="max-vw-100 fixed-top">
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Peter Parks</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse align-items-right" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="login">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div>
            <h1></h1>
            <h1></h1>
        </div>
        <h1 class="display-3 text-center">Invoice and Payment Method </h1>
        <main class="container text-center h-100">

            <div class="row">
                <!-- <div class="col">

            </div> -->
                <form action='/pay' method="post" class="col d-flex align-items-center ">
                    <table class="table table-success table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Client Name</th>
                                <th scope="col">Merchant Name</th>
                                <th scope="col">Parking Spot Name</th>
                                <th scope="col">Address</th>
                                <th scope="col">Location</th>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                                <th scope="col">Price</th>
                                <th scope="col">Payment Method</th>
                                <th scope="col">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= rented_by %>
                                </td>
                                <td>Ami</td>
                                <td>
                                    <%= name %>
                                </td>
                                <td>
                                    <%= address %>
                                </td>
                                <td>
                                    <%= location %>
                                </td>
                                <td>
                                    <%= dateformat(rented_date, "ddd, d mmm" ) %>
                                </td>
                                <td>
                                    <%= rented_time %>
                                </td>
                                <td>
                                    <%= price %>
                                </td>
                                <td>
                                    <div class="mb-3">
                                        <input type="hidden" name="id" value="<%= id %>" />
                                        <select class="form-select" name="payment_method"
                                            aria-label="Default select example">
                                            <option selected>Choose Payment Method</option>
                                            <option value="Bkash">Bkash</option>
                                            <option value="Nagad">Nagad</option>
                                            <option value="Card">Card</option>
                                        </select>
                                    </div>
                                </td>

                                <td> <button type="submit" class="btn btn-primary btn-success">Confirm Booking</button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </form>
                <!-- <div class="col">

            </div> -->
            </div>
        </main>
        <%- include('../partials/close') %>